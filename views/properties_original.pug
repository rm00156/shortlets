                                        .col-lg-2.col-md-3.col-sm-4
                                            .single-tab-select-box
                                                h2 check in
                                                .travel-check-icon
                                                    form(action='#')
                                                        input#fromDt.form-control(type='text' name='check_in' data-toggle='datepicker' )
                                                // /.travel-check-icon
                                            // /.single-tab-select-box
                                            // /.col
                                        .col-lg-2.col-md-3.col-sm-4
                                            .single-tab-select-box
                                                h2 check out
                                                .travel-check-icon
                                                    form(action='#')
                                                        input#toDt.form-control(type='text' name='check_out' data-toggle='datepicker2' )
                                                    // /.travel-check-icon
                                                    // /.single-tab-select-box
                                                    // /.col
                                            
                                        .col-lg-2.col-md-1.col-sm-4
                                            .single-tab-select-box
