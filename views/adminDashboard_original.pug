doctype html
html(lang='en')
  include common/adminHeader.pug
  +head("Admin Dashboard")
  body#page-top
    // Page Wrapper
    #wrapper
      // Sidebar
      include common/adminNavbar.pug
      +navbar(user)
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Topbar
          include common/adminHorizontalNavbar.pug
          +navbar(user)
          // Begin Page Content
          .container-fluid
            // Page Heading
            .d-sm-flex.align-items-center.justify-content-between.mb-4
              h1.h3.mb-0.text-gray-800 Dashboard
            input(style="display:none" id="result" value=result)
            input(style="display:none" id="last7" value=last7)

            // Content Row
            .row
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-primary.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Gross Earnings (Monthly)
                        .h5.mb-0.font-weight-bold.text-gray-800 £#{(parseFloat(thisMonthsTotal)).toFixed(2)}
                      .col-auto
                        i.fas.fa-calendar.fa-2x.text-gray-300
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-success.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Gross Earnings (Annual)
                        .h5.mb-0.font-weight-bold.text-gray-800 £#{(parseFloat(thisYearsTotal)).toFixed(2)}
                      .col-auto
                        i.fas.fa-dollar-si
                        gn.fa-2x.text-gray-300
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-info.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Best Selling Product
                        .row.no-gutters.align-items-center
                          //- .h5.mb-0.font-weight-bold.text-gray-800 #{(bestSellingProduct.product != undefined) ? bestSellingProduct.product.name : ""} #{(bestSellingProduct.quantity != 0) ? bestSellingProduct.quantity : 0}
                          //- .h5.mb-0.font-weight-bold.text-gray-800 #{(bestSellingProduct.quantity != 0) ? bestSellingProduct.quantity : 0}
                      .col-auto
                        //- if(bestSellingProduct.product != undefined)
                          img(src=bestSellingProduct.product.picture1Path style="margin-left:10px;height:100px")
                          

              // Pending Requests Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-warning.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 New Sign ups (Monthly)
                        .h5.mb-0.font-weight-bold.text-gray-800 #{thisMonthsNewAccounts}
                      .col-auto
                        i.fas.fa-comments.fa-2x.text-gray-300
            // Content Row
            .row
              // Area Chart
              .col-xl-8.col-lg-7
                .card.shadow.mb-4
                  // Card Header - Dropdown
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Short Lets in the last 7 days
                    //- .dropdown.no-arrow
                      a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                      .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                        .dropdown-header Dropdown Header:
                        a.dropdown-item(href='#') Action
                        a.dropdown-item(href='#') Another action
                        .dropdown-divider
                        a.dropdown-item(href='#') Something else here
                  // Card Body
                  .card-body
                    .chart-area
                      canvas#myAreaChart
              // Pie Chart
              .col-xl-4.col-lg-5
                .card.shadow.mb-4
                  // Card Header - Dropdown
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Short Let Demographic
                  // Card Body
                  .card-body
                    .chart-bar.pt-4.pb-2
                      canvas#myBarChart
                    //- .mt-4.text-center.small
                      span.mr-2
                        i.fas.fa-circle.text-primary
                        |  Uk
                      span.mr-2
                        i.fas.fa-circle.text-success
                        |  International
                      

    script(src="vendor/chart.js/Chart.min.js")
    script(src="js/chart-bar-demo.js")
    script(src="js/chart-area-demo.js")
    include common/adminFooter.pug
    +footer()