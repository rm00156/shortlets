  body
    .container-fluid.px-3
      .row.min-vh-100
        .col-md-8.col-lg-6.col-xl-5.d-flex.align-items-center
          .w-100.py-5.px-md-5.px-xxl-6.position-relative
            .mb-5
              img.img-fluid.mb-3(src='img/brand/hyde.jpg' alt='...' style='max-width: 192px;')
              h2 Welcome back
            form(action="/login", method ="POST")
              if(error)
                p.small.text-danger(style="font-size:9pt") #{error} 
              if(reset)
                p.small.text-danger Password has successfully been reset
              .mb-4
                label.form-label(for='email')  Email Address
                input#email.form-control(name='email' type='email' placeholder='name@address.com' autocomplete='off' required=true data-msg='Please enter your email' value=(formData != undefined) ? formData.email : 'rmillermcpherson4@gmail.com')
              .mb-4
                .row
                  .col
                    label.form-label(for='password')  Password
                  .col-auto
                    a.form-text.small.text-primary(href='/forgotPassword') Forgot password?
                input#password.form-control(name='password' placeholder='Password' type='password' required=true data-msg='Please enter your password' value=(formData != undefined) ? formData.password : 'welcome11')
                //-   .mb-4
                    .form-check
                    input#loginRemember.form-check-input(type='checkbox')
                    label.form-check-label.text-muted(for='loginRemember')
                        span.text-sm Remember me for 30 days
              // Submit
              
              .d-grid
                button.btn.btn-lg.btn-primary Sign in
              hr.my-3.hr-text.letter-spacing-2(data-content="OR DON'T HAVE AN ACCOUNT")
              .d-grid.gap-2
                if(checkout)
                  input(style="display:none" value='checkout' name='checkout')
                  input(style="display:none" value=propertyId name='propertyId')
                  input(style="display:none" value=guests name='guests')
                  a.btn.btn.btn-outline-muted(href="/register?checkout=true&propertyId=" + propertyId + '&guests=' + guests) Register
                else
                  a.btn.btn.btn-outline-muted(href="/register") Register  
            //-   hr.my-4
            //-   p.text-center
            //-     small.text-muted.text-center
            //-       | Don't have an account yet? 
            //-       a(href='signup.html') Sign Up                
            a.close-absolute.me-md-5.me-xl-6.pt-5(href='/')
              svg.svg-icon.w-3rem.h-3rem
                use(xlink:href='#close-1')  
        .col-md-4.col-lg-6.col-xl-7.d-none.d-md-block
          // Image
          .bg-cover.h-100.me-n3(style='background-image: url(img/photo/photo-1497436072909-60f360e1d4b1.jpg);')
