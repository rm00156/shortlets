doctype html
html(lang='en')
   include common/header.pug 
   +head("Place Order")
   body(style='padding-top: 72px;')
    include common/navbar.pug 
    +navbar(user)
    script(src="https://js.stripe.com/v3/")
    .progress.rounded-0.sticky-top(style='height: 8px; top: 72px;')
      .progress-bar(role='progressbar' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
    section.py-5
      .container
        .row
          .col-lg-7
            input#propertyId(style="display:none" value=property.id)
            input#fromDate(style="display:none" value=fromDate)
            input#toDate(style="display:none" value=toDate)

            p.subtitle.text-primary Book your holiday home
            h1.h2.mb-5
              | Review #{property.name} rules 
            //-   span.text-muted.float-end Step 1
            //- .text-block
              .alert.alert-warning.text-sm.mb-3
                .d-flex.align-items-center
                  svg.svg-icon.svg-icon.svg-icon-light.w-2rem.h-2rem.me-3.text-reset.flex-shrink-0
                    use(xlink:href='#heart-1')  
                  div
                    strong This home is on people’s minds.
                    |  It’s been viewed 43 times in the past week.
            .text-block
              input#dayDiff(style="display:none" value=dayDiff)
              h5.mb-4 #{dayDiff} night(s) in London
              .row.mb-3
                .col-md-6.d-flex.align-items-center.mb-3.mb-md-0
                  .date-tile.me-3
                    .text-uppercase
                      span.text-sm #{fromMonth}
                      br
                      strong.text-lg #{fromNumber}
                  p.text-sm.mb-0
                    | #{fromDay} check-in
                    br
                    | 3PM
                .col-md-6.d-flex.align-items-center
                  .date-tile.me-3
                    .text-uppercase
                      span.text-sm #{toMonth}
                      br
                      strong.text-lg #{toNumber}
                  p.text-sm.mb-0
                    | #{toDay} check-out
                    br
                    | 11AM
            .text-block
              h5.mb-4 Things to keep in mind
              ul.list-unstyled
                li.mb-2
                  .d-flex.align-items-center.mb-3
                    .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                      i.fa.fas.fa-child.text-secondary.fa-fw.text-center
                    div
                      span.text-sm
                        | Not suitable for children and infants - The entrance staircase doesn't have handrails
                li.mb-2
                  .d-flex.align-items-center.mb-3
                    .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                      i.fa.fas.fa-glass-cheers.text-secondary.fa-fw.text-center
                    div
                      span.text-sm No parties or events
                li.mb-2
                  .d-flex.align-items-center.mb-3
                    .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                      i.fa.fa-smoking-ban.text-secondary.fa-fw.text-center
                    div
                      span.text-sm No smoking
                li.mb-2
                  .d-flex.align-items-center.mb-3
                    .icon-rounded.icon-rounded-sm.bg-secondary-light.flex-shrink-0.me-4
                      i.fa.fa-cat.text-secondary.fa-fw.text-center
                    div
                      span.text-sm No pets
            //- .row.form-block.flex-column.flex-sm-row
              .col.text-center.text-sm-start
              .col.text-center.text-sm-end
                a.btn.btn-primary.px-3(href='user-booking-2.html')
                  | Next step
                  i.fa-chevron-right.fa.ms-2
          .col-lg-5.ps-xl-5
            .card.border-0.shadow
              .card-body.p-4
                
                .text-block.py-3
                  ul.list-unstyled.mb-0
                    li.mb-3
                      i.fas.fa-users.fa-fw.text-muted.me-2
                      | #{guests} guest(s)
                    li.mb-0
                      i.far.fa-calendar.fa-fw.text-muted.me-2
                      | #{fromMonth} #{fromNumber}, #{fromYear} 
                      i.fas.fa-arrow-right.fa-fw.text-muted.mx-3
                      | #{toMonth} #{toNumber}, #{toYear} 
                .text-block.pt-3.pb-0
                  table.w-100
                    tbody
                      tr
                        th.fw-normal.py-2 £#{(parseFloat(property.pricePerDay)).toFixed(2)} x #{dayDiff} night(s)
                        td.text-end.py-2 £#{totalCost}
                    //-   tr
                        th.fw-normal.pt-2.pb-3 Service fee
                        td.text-end.pt-2.pb-3 £67.48
                    tfoot
                      tr.border-top
                        th.pt-3 Total
                        td.fw-bold.text-end.pt-3 £#{totalCost}
              .card-footer.bg-primary-light.py-4.border-0
                .d-flex.align-items-center
                  div
                    h6.text-primary Flexible – free cancellation
                    p.text-sm.text-primary.opacity-8.mb-0
                      | Cancel within 48 hours of booking to get a full refund. 
                      a.text-reset.ms-3(href='#') More details
            .text-block
                
                button#checkout.btn.btn-primary.px-3(type="submit" data-total=totalCost data-guests=guests)
                    | Make Booking
                    i.fa-chevron-right.fa.ms-2
