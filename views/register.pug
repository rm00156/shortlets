    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.8.1/css/all.css' integrity='sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf' crossorigin='anonymous')
  body
    .container-fluid.px-3
      .row.min-vh-100
        .col-md-8.col-lg-6.col-xl-5.d-flex.align-items-center
          .w-100.py-5.px-md-5.px-xxl-6.position-relative
            .mb-4
              img.img-fluid.mb-4(src='img/brand/hyde.jpg' alt='...' style='max-width: 192px;')
              if(checkout)
                h2 Register to make a booking
              else
                h2 Register

            form(id="form" action="/register", method ="POST")
              .mb-4
                label.form-label(for='name')  Name
                input#name.form-control(name='name' type='text' placeholder='Name' autocomplete='off' required=true data-msg='Please enter your name' value=(formData != undefined) ? formData.name : '')  
                if(errors && errors.name)
                    p.error(id="error").small.text-danger #{errors.name}
              .mb-4
                label.form-label(for='email')  Email Address
                input#email.form-control(name='email' type='email' placeholder='name@address.com' autocomplete='off' required=true data-msg='Please enter your email' value=(formData != undefined) ? formData.email : '')
                if(errors && errors.email)
                    p.error(id="error").small.text-danger #{errors.email}
              .mb-4
                label.form-label(for='confirmEmail')  Confirm Email Address
                input#confirmEmail.form-control(name='confirmEmail' type='email' placeholder='name@address.com' autocomplete='off' required=true data-msg='Please reenter your email' value=(formData != undefined) ? formData.confirmEmail : '')
                
              .mb-4
                label.form-label(for='password')  Password
                input#password.form-control(name='password' placeholder='Password' type='password' required=true data-msg='Please enter your password' value=(formData != undefined) ? formData.password : '')
                if(errors && errors.password)
                    p.error(id="error").small.text-danger #{errors.password}
              .mb-4
                label.form-label(for='confirmPassword')  Confirm your password
                input#confirmPassword.form-control(name='confirmPassword' placeholder='Password' type='password' required=true data-msg='Please reenter your password' value=(formData != undefined) ? formData.confirmPassword : '')
              .d-grid.gap-2
                button.btn.btn-lg.btn-primary(type='submit') Register
                hr.my-3.hr-text.letter-spacing-2(data-content='OR ALREADY HAVE AN ACCOUNT')
                
                if(checkout)
                  input(style="display:none" value='checkout' name='checkout')
                  input(style="display:none" value=propertyId name='propertyId')
                  input(style="display:none" value=guests name='guests')
                  input(style="display:none" value=fromDate name='fromDate')
                  input(style="display:none" value=toDate name='toDate')
                  a.btn.btn.btn-outline-muted(href="/login?checkout=true&propertyId=" + propertyId +'&guests=' + guests + '&fromDate=' + fromDate + '&toDate=' + toDate) Login
                else
                  a.btn.btn.btn-outline-muted(href="/login") Login
                    
              hr.my-4
              p.text-sm.text-muted
                | By signing up you agree to Directory's 
                a(href='#') Terms and Conditions
                |  and 
                a(href='#') Privacy Policy
                | .
            a.close-absolute.me-md-5.me-xl-6.pt-5(href='/')
              svg.svg-icon.w-3rem.h-3rem
                use(xlink:href='#close-1')  
        .col-md-4.col-lg-6.col-xl-7.d-none.d-md-block
          // Image
          .bg-cover.h-100.me-n3(style='background-image: url(img/photo/photo-1497436072909-60f360e1d4b1.jpg);')
    // JavaScript files
    script.
      // ------------------------------------------------------- //
      //   Inject SVG Sprite -
      //   see more here
      //   https://css-tricks.com/ajaxing-svg-sprite/
      // ------------------------------------------------------ //
      function injectSvgSprite(path) {
      var ajax = new XMLHttpRequest();
      ajax.open("GET", path, true);
      ajax.send();
      ajax.onload = function(e) {
      var div = document.createElement("div");
      div.className = 'd-none';
      div.innerHTML = ajax.responseText;
      document.body.insertBefore(div, document.body.childNodes[0]);
      }
      }
      // to avoid CORS issues when viewing using file:// protocol, using the demo URL for the SVG sprite
      // use your own URL in production, please :)
      // https://demo.bootstrapious.com/directory/1-0/icons/orion-svg-sprite.svg
      //- injectSvgSprite('${path}icons/orion-svg-sprite.svg');
      injectSvgSprite('https://demo.bootstrapious.com/directory/1-4/icons/orion-svg-sprite.svg');
