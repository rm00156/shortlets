                    .row
                        .tab-content(style="box-shadow:0 5px 20px rgb(14 15 18 / 20%);margin-top:20px")
                            #tours.tab-pane.active.fade.in(role='tabpanel')
                                .tab-para
                                    .row
                                        .col-lg-4.col-md-4.col-sm-12
                                            .single-tab-select-box
                                                h2 destination
                                                .travel-select-icon
                                                    select#city.form-control
                                                        option(value=0) select your destination city
                                                        each allCity in cities 
                                                            option(value=allCity.id) #{allCity.name}
                                                    p.small.text-danger(id='cityError')

                                                    // /.option
                                                // /.select
                                                // /.travel-select-icon
                                                .travel-select-icon
                                                    select#town.form-control
