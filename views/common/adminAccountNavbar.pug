mixin accountNavbar()
    .card-body(style="border: 1px solid rgba(0,0,0,.125)")
        div(style="padding-bottom:10px;padding-top:10px;padding-left:5px;background-color:rgba(0,0,0,.125);")
            h6(style="font-weight:700") MY ACCOUNT
        div(style="padding-left:5px")
            ul(style="list-style:none;font-weight:500;font-size:14px;margin-top:20px;padding-bottom:10px")
                li
                    a(href="/adminAccount?id=" + account.id style="color:black;") Dashboard
                if(account.deleteFl == false)
                    li
                        a(href="/adminAccountDetails?id=" + account.id style="color:black;") Account Details
                    
                    li
                        a(href="#" id="closeAccount" style="color:black;") Close Account
    
        .row(style="margin-top:20px;")
            .col-sm-12
                div(style="padding-bottom:10px;padding-top:10px;padding-left:5px;background-color:rgba(0,0,0,.125);")
                    h6(style="font-weight:700") BOOKING INFORMATION
                div(style="padding-left:5px")
                    ul(style="list-style:none;font-weight:500;font-size:14px;margin-top:20px;padding-bottom:10px;")
                        li
                            a(href="/adminOrderHistory?id=" + account.id style="color:black;") BOOKING History
                        li
                            a(href="/cancellations" style="color:black;") Cancellation Policy

        .row(style="margin-top:20px;")
            .col-sm-12
                div(style="padding-bottom:10px;padding-top:10px;padding-left:5px;background-color:rgba(0,0,0,.125);")
                    h6(style="font-weight:700") BOOK CONFIDENTLY
                div(style="padding-left:5px")
                    ul(style="list-style:none;font-weight:500;font-size:14px;margin-top:20px;padding-bottom:10px;")
                        li
                            a(href="#" style="color:black;") Privacy Notice
                        li
                            a(href="#" style="color:black;") Cancellation Information
